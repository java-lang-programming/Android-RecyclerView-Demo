<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.java_lang_programming.android_recycleview_demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.RecyclerViewSwipeActivity"
            android:label="@string/title_activity_recycler_view_swipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.RecyclerViewDividerLineActivity"
            android:label="@string/title_activity_recycler_view_divider_line"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.CustomRecyclerViewActivity"
            android:label="@string/title_activity_custom_recycler_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>